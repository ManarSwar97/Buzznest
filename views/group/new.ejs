<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Group to <%= group.game %></title>
  <link rel="stylesheet" href="/stylesheets/style9.css">
</head>
<body>
  <%- include('../navbar/_navbar.ejs') %>

  <div class="new-form">
    <form class="form" action="/group/<%= group._id %>" method="POST" enctype="multipart/form-data">
      <h3>Add Group to <%= group.game %></h3>

      <div class="form-group">
        <label for="groupName">Group Name:</label>
        <input type="text" id="groupName" name="groupName" required>
      </div>

      <div class="form-group">
        <label for="groupImage">Group Image:</label>
        <input type="file" id="groupImage" name="groupImage" required>
      </div>

      <div class="form-group">
        <label for="game">Game:</label>
        <input type="text" id="game" name="game" value="<%= group.game %>" required>
      </div>

      <div class="button-container">
        <button type="submit">Create Group</button>
      </div>

      <div class="link-container">
        <p><a href="/group/<%= group._id %>">Cancel</a></p>
      </div>
    </form>
  </div>
</body>
</html>
