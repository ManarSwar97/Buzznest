<!DOCTYPE html>
<html>
<head>
    <title>All Groups</title>
    <style>
        .group-card {
            border: 1px solid #ddd;
            padding: 15px;
            margin: 10px 0;
            border-radius: 5px;
        }
    </style>
</head>
<body>
        <%- include('../navbar/_navbar.ejs')%>

    <h1>All Groups</h1>
    <a href="/games">‚Üê Back to Games</a>

    <% if (groups.length > 0) { %>
        <% groups.forEach(group => { %>
            <div class="group-card">
                <h3><%= group.groupName %></h3>
                <p>Belongs to game: <%= group.game.gameName %></p>
                
                <div class="actions">
                    <form action="/games/<%= group.game._id %>/groups/<%= group._id %>?_method=DELETE" 
                          method="POST" 
                          style="display: inline;">
                        <button type="submit">Delete</button>
                    </form>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <p>No groups found. Create one via a Game page.</p>
    <% } %>
</body>
</html>