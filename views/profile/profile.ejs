<!-- I looked at a reference from MEN STACK AUTH LESSON  -->
 <link rel="stylesheet" href="/stylesheets/style9.css">
<% if (user) { %>
<h1>Hello <%= user.username %>!</h1>
<ul>
  <li>Name: <%= user.firstName %></li>
  <li>Last Name: <%= user.lastName %></li>
  <li>Email address: <%= user.email %></li>
  <li><img src="<%= user.image %>" alt="User Image" /></li>
</ul>
<% } else { %>
<h1>User not Found, giSign in!</h1>
<% } %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.username %>'s Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('../navbar/_navbar.ejs') %>

  <div class="container mt-4">
    <div class="card">
      <div class="card-body">
        <div class="d-flex align-items-center mb-4">
          <% if (user.image) { %>
            <img src="/uploads/<%= user.image %>" class="rounded-circle me-4" width="100" height="100">
          <% } else { %>
            <img src="/uploads/default.jpg" class="rounded-circle me-4" width="100" height="100">
          <% } %>
        </div>

        <div class="row">
          <div class="col-md-6">
            <h4>User Information</h4>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Name: <%= user.firstName %> <%= user.lastName %></li>
              <li class="list-group-item">Email: <%= user.email %></li>
              <li class="list-group-item">Member since: <%= user.createdAt.toLocaleDateString() %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

